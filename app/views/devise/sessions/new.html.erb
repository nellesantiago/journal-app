<div class="login">
  <div class="nav">
    <div class="title">
      <i class="fa-solid fa-list-check"></i>
      Errand
    </div>
    <div class="options">
      <ul>
        <li>About</li>
        <li>Features</li>
        <li>Pricing</li>
        <li>Blog</li>
        <li>Support</li>
      </ul>
    </div>
  </div>
  <div class="main">
    <div class="text">
      <div class="slogan">
        <span>Get more things done.</span>
        Stay productive. Stay organized.
      </div>
      <div>
        <%= image_tag "happy.jpg"%>
      </div>
    </div>
    <div class="form">
      <p id="alert"><%= alert %></p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder: "Email", autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
